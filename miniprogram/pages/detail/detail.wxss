.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}

.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: #fff;
}

/* 占位 */

.temp {
  height: 100rpx;
}

.font1 {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 5px;
  background-color: #fff;
}

.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}

.van-class {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10px;
}

.view-class {
  color: gray;
  font-size: 13px;
  margin-right: 10px;
}

.view-class2 {
  color: gray;
  font-size: 13px;
  margin-right: 5px;
  margin: 10px;
}

.button-class {
  font-size: 10px !important;
  font-weight: 100 !important;
  width: 20vw !important;
}

.font-orange {
  color: orange;
}
