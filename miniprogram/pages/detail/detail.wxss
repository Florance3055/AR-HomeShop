/**detail.wxss**/

page {
  background: #f6f6f6;
  height: 100%;
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: flex-start;
}

/* 直接设置swiper属性 */

swiper {
  height: 500rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.background {
  background-color: #fff;
}

.detail {
  position: relative;
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  margin-bottom: 0rpx;
  background-color: #fff;
}

.detail .title {
  display: flex;
  flex-direction: row;
  font-size: 15px;
  margin: 5px;
  color: black;
  text-align: justify;
}

.detail .title .icon-class1 {
  position: absolute;
  right: 20px;
}

.detail .title .icon-class2 {
  position: absolute;
  right: 50px;
}

.detail .price {
  color: #937467;
  font-size: 30rpx;
  margin: 10rpx;
}

.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: #fff;
  text-align: center;
}

.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: #fff;
  text-align: center;
}

.image_detail {
  width: 100%;
}

