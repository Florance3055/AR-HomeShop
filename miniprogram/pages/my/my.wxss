/**my.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 25rpx;
  height: 200rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo {
  padding-left: 80rpx;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #000;
  background-color: white;
  background-size: cover;
  text-align: left;
  padding-left: 0;
  margin-left: 0px;
  width: 50vw;
}

.userinfo-nickname::after {
  border: none;
}

.userinfo-nickname-wrapper {
  flex: 1;
}

.work1 {
  margin-top: 25rpx;
  height: 380rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
}

.font1 {
  font-weight: bold;
  font-size: 30rpx;
  margin: 10px;
}

.work2 {
  margin-top: 25rpx;
  height: 390rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
}

.font2 {
  font-size: 25rpx;
  margin-top: 10px;
}

.font3 {
  color: #937467;
}

.work3 {
  border-left: 2px solid;
  border-color: #000;
}
