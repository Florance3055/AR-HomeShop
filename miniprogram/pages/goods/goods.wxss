/**good.wxss**/

page {
  background: #fff;
  height: 100%;
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: flex-start;
}

.view-class {
  background: #fff;
  margin: 10px;
}

.view-class .image {
  width: 100%;
  height: 120px;
  border: 1px solid !important;
  border-color: black !important;
}

.view-class .title {
  width: 100%;
  font-size: 15px;
  margin: 5px;
  color: black;
  text-align: left !important;
  overflow: hidden !important;
}

.view-class .price {
  width: 100%;
  color: #937467;
  font-size: 30rpx;
  margin: 10rpx;
  text-align: left !important;
}
